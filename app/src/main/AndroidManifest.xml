<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.walletapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WalletApp">
        <activity
            android:name=".groups.GroupsActivity"
            android:exported="false"
            android:label="My Groups"/>
        <activity
            android:name=".summary.SummaryActivity"
            android:exported="false"
            android:label="My Summary" />
        <activity
            android:name=".expense.CreateExpenseActivity"
            android:exported="false"
            android:label="My Expenses" />
        <activity
            android:name=".expense.ExpensesActivity"
            android:exported="false"
            android:label="My Expenses" />
        <activity
            android:name=".profile.ProfileActivity"
            android:exported="false"
            android:label="My Profile" />
        <activity
            android:name=".auth.StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".auth.LoginActivity"
            android:exported="false"
            android:label="myWallet" />
        <activity
            android:name=".auth.RegisterActivity"
            android:exported="false"
            android:label="MyWallet" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>