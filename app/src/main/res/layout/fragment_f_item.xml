<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FItem">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <!-- TITLE -->
        <TextView
            android:id="@+id/fitem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginTop="44dp"
            android:textSize="28sp"
            android:text="Tytuł"
            />
        <View
            android:layout_width="match_parent"
            android:layout_marginHorizontal="120dp"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/teal_200"
            />

        <!-- COST -->
        <TextView
            android:id="@+id/fitem_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginVertical="28dp"
            android:textSize="24sp"
            android:textColor="@color/cost_green"
            android:text="+24.07"
            />

        <!-- CATEGORY -->
        <TextView
            android:id="@+id/fitem_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textSize="17sp"
            android:text="Kategoria"
            />

        <!-- OPIS -->
        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="6dp"
            >
            <TextView
                android:id="@+id/fitem_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(\nbrak opisu\n)"
                android:textAlignment="center"
                android:padding="6dp"
                />
        </androidx.cardview.widget.CardView>

        <!-- BUTTONS -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                >
                <Button
                    android:id="@+id/fitem_btn_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:text="Edytuj"
                    />

                <Button
                    android:id="@+id/fitem_btn_return"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/grey"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="50dp"
                    android:text="Powrót"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>