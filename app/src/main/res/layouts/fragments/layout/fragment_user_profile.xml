<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".groups.UserProfileFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="serif-monospace"
        android:text="@string/name"
        android:textColor="@color/teal_700"
        android:textSize="22sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/frameNameGroupUserProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="2dp"
        android:fontFamily="serif-monospace"
        android:text="@string/email"
        android:textColor="@color/teal_700"
        android:textSize="22sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/frameEmailGroupUserProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="2dp"
        android:fontFamily="serif-monospace"
        android:text="@string/phone_number"
        android:textColor="@color/teal_700"
        android:textSize="22sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/framePhoneGroupUserProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="2dp"
        android:fontFamily="serif-monospace"
        android:text="@string/bank_account"
        android:textColor="@color/teal_700"
        android:textSize="22sp"
        android:textStyle="bold" />

    <FrameLayout
        android:id="@+id/frameBankGroupUserProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="bottom"
        android:orientation="vertical">
        <!--        <Button-->
        <!--            android:id="@+id/btn_deleteGroupUser"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginHorizontal="10dp"-->
        <!--            android:layout_marginBottom="20dp"-->
        <!--            android:backgroundTint="@color/dark"-->
        <!--            android:text="Remove user"-->
        <!--            android:textSize="20sp" />-->
        <Button
            android:id="@+id/btn_backGroupUserProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/teal_700"
            android:text="@string/go_back"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>