<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    tools:context=".groups.UserProfileFragment">

    <ImageView
        android:id="@+id/btn_backGroupUserProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:contentDescription="@string/save"
        android:padding="2dp"
        android:src="@drawable/ic_baseline_close_32"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="serif-monospace"
            android:text="@string/name"
            android:textColor="@color/teal_700"
            android:textSize="22sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/frameNameGroupUserProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="2dp"
            android:fontFamily="serif-monospace"
            android:text="@string/email"
            android:textColor="@color/teal_700"
            android:textSize="22sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/frameEmailGroupUserProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="2dp"
            android:fontFamily="serif-monospace"
            android:text="@string/phone_number"
            android:textColor="@color/teal_700"
            android:textSize="22sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/framePhoneGroupUserProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="2dp"
            android:fontFamily="serif-monospace"
            android:text="@string/bank_account"
            android:textColor="@color/teal_700"
            android:textSize="22sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/frameBankGroupUserProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>