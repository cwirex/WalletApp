<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".groups.GroupActionFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_inputGROUPparent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:hint="Aa..."
        app:cardCornerRadius="2dp"
        app:contentPadding="5dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_inputGROUP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="title"
            android:hint=""
            android:inputType="text"
            android:text="" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_cancelGROUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_baseline_close_50"
            app:tint="@color/purple_700" />

        <ImageView
            android:id="@+id/btn_submitGROUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/edit"
            android:src="@drawable/ic_baseline_check_50"
            app:tint="@color/purple_700" />
    </LinearLayout>


</LinearLayout>